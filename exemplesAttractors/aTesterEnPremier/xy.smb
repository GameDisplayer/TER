# variable declaration
VAR
x = 0 .. 2 ;
y = 0 .. 1 ;

# regulations
REG
xActiy [(x>=2)] => y;
yInhix [!(y>=1)] => x;
xActix [(x>=1)] => x;

# parametres pour obtenir 2 bassins d'attraction
PARA

K_x = 0 ;
K_x:yInhix = 2 ;
K_x:xActix = 2;
K_x:xActix:yInhix = 2 ;

K_y = 1 ;
K_y:xActiy = 1;

CTL

(x=1 & y=0) -> AF(x=2 & y=1);

(x=0 & y=0) -> EX(AF(x=0 & y=1))| (AF(x=2 & y=1));

END
